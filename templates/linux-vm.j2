apiVersion: kubevirt.io/v1alpha2
kind: VirtualMachine
metadata:
  name: {{ vm_name }}
  labels:
    import-vm-apb/transaction_id: {{ _apb_service_instance_id }}
spec:
  running: false
  template:
    spec:
      metadata:
        labels:
          kubevirt.io/domain: {{ vm_name }}
      terminationGracePeriodSeconds: 0
      domain:
        cpu:
          cores: {{ nr_cores }}
        resources:
          requests:
            memory: {{ mem }}{{ mem_unit }}
        devices:
          disks:
          - name: disk-1
            disk:
              bus: {{ disk_bus }}
            volumeName: volume-1
      volumes:
      - name: volume-1
        persistentVolumeClaim:
          claimName: {{ pvc_name }}
